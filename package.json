{
    "name": "paprize",
    "type": "module",
    "packageManager": "pnpm@10.21.0",
    "scripts": {
        "build:website": "pnpm -r --filter @paprize/website build",
        "build": "pnpm -r --filter './packages/**' build",
        "build:packages": "pnpm -r --filter './packages/**' --filter=!@paprize/config -filter=!@paprize/website build",
        "release": "pnpm build:packages && pnpm -r --filter './packages/**' publish --access public",
        "test": "pnpm -r --if-present test -- --run",
        "lint": "eslint && prettier '*.{js,ts,tsx,mjs,cjs,json,html}' --check"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "@eslint/js": "^9.37.0",
        "@microsoft/api-extractor": "^7.54.0",
        "eslint": "^9.37.0",
        "eslint-plugin-react-hooks": "^6.1.1",
        "eslint-plugin-react-refresh": "^0.4.23",
        "globals": "^16.4.0",
        "prettier": "3.6.2",
        "typescript-eslint": "^8.46.1"
    }
}