{
    "name": "paprize",
    "type": "module",
    "packageManager": "pnpm@10.21.0",
    "scripts": {
        "build:website": "pnpm -r -F @paprize-dev/website build",
        "build": "pnpm -r -F './packages/**' build",
        "release": "pnpm -r -F @paprize/* build && pnpm -r -F @paprize/* publish --access public",
        "test": "pnpm run test:unit && pnpm run test:e2e",
        "test:unit": "pnpm -r -F=!@paprize-dev/e2e --if-present test -- --run",
        "test:e2e": "pnpm run -F @paprize-dev/e2e test",
        "lint": "eslint && prettier '*.{js,ts,tsx,mjs,cjs,json,html}' --check"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "@eslint/js": "^9.37.0",
        "@microsoft/api-extractor": "^7.54.0",
        "eslint": "^9.37.0",
        "eslint-plugin-react-hooks": "^6.1.1",
        "eslint-plugin-react-refresh": "^0.4.23",
        "globals": "^16.4.0",
        "prettier": "3.6.2",
        "typescript-eslint": "^8.46.1"
    }
}