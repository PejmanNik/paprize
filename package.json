{
    "name": "paprize",
    "type": "module",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "core:dev": "npm run dev -w packages/core",
        "website:build": "npm run build -w packages/website",
        "build": "npm run build -w packages/core -w packages/react -w packages/puppeteer",
        "release": "npm publish --workspace packages/core --workspace packages/react --workspace packages/puppeteer --access public",
        "test": "npm test -ws --if-present -- --run"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "eslint": "^9.37.0",
        "eslint-plugin-react-hooks": "^6.1.1",
        "eslint-plugin-react-refresh": "^0.4.23",
        "globals": "^16.4.0",
        "prettier": "3.6.2",
        "typescript-eslint": "^8.46.1"
    }
}