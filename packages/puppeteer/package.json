{
  "name": "@paprize/puppeteer",
  "private": true,
  "description": "Convert HTML reports to print-ready PDFs",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/paprize_puppeteer.umd.cjs",
  "module": "./dist/paprize_puppeteer.js",
  "exports": {
    ".": {
      "types": "./dist/paprize_puppeteer.d.ts",
      "import": "./dist/paprize_puppeteer.js",
      "require": "./dist/paprize_puppeteer.umd.cjs"
    },
    "./src": {
      "types": "./src/window.ts",
      "import": "./src/window.ts"
    }
  },
  "keywords": [
    "paper",
    "print",
    "report",
    "html2pdf",
    "pdf"
  ],
  "homepage": "https://github.com/PejmanNik/paprize#readme",
  "bugs": {
    "url": "https://github.com/PejmanNik/paprize/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PejmanNik/paprize.git"
  },
  "license": "Apache-2.0",
  "author": "PejmanNikram",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/serve-handler": "^6.1.4",
    "puppeteer-core": "^24.19.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  },
  "peerDependencies": {
    "puppeteer-core": ">=24.0.0"
  },
  "dependencies": {
    "serve-handler": "^6.1.6"
  }
}